FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      laserProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

power           113; // 113 W for Trumpf TruPrint 1000
power_
{
    type        sine;
    level       113;
    amplitude   50;
    period      1e-4;
    scale       1;
}

radius      [ m ]   2.75e-5; // 2.75e-5 for Trumpf TruPrint 1000
velocity    [ m/s ] ( 0.7 0 0 ); // 0.7 for Trumpf TruPrint 1000
coordStart  [ m ]   ( 0 0 1e-4 );
timeStop    [ s ]   0.0005;

beam
{
    type    Gaussian; // divergeGaussian
    direction           ( 0 0 -1 );
    waveLength  [ m ]   1e-6;
}

source
{
    type    rayTracing; // gradAlpha

    gradAlphaModel
    {
        absorption
        {
            type    coordinateBased; // constant
            absorptivity    0.35;
        }
    }

    rayTracingModel
    {
        nr              10;
        nTheta          20;
        maxr            1.8;
        writeOBJ        true;
        useSubCellData  true;

        scattering
        {
            threshold   1e-5; // do not scatter if the particle energy contribution is lower
            type        Fresnel;
            n           3.27; // refractive index
            k           4.48; // absorptive index
        }
    }
}

// ************************************************************************* //
