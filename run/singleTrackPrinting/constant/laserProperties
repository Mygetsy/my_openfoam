FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      laserProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

power           113;
power_
{
    type        sine;
    level       113;
    amplitude   50;
    period      1e-4;
    scale       1;
}

radius          2.75e-5;
velocity        ( 0.7 0 0 );
coordStart      ( 0 0 1e-4 );
timeStop        0.0005;

beam
{
    type        Gaussian; // topHat
    direction   ( 0 0 -1 );
    waveLength  1e-6;
}

source
{
    type    rayTracing; // gradAlpha

    gradAlphaModel
    {
        absorption
        {
            type    coordinateBased; // constant
            absorptivity    0.35;
        }
    }

    rayTracingModel
    {
        nRays           300;
        RcutByR         1.4;
        writeOBJ        true;
        useSubCellData  true;

        scattering
        {
            threshold   1e-5; // do not scatter if the particle energy contribution is lower
            type        Fresnel;
            n           3.27; // refractive index
            k           4.48; // absorptive index
        }
    }
}

