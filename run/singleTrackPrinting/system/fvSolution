FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.metal.*"
    {
        isoFaceTol      1e-10;
        surfCellTol     1e-6;
        nAlphaBounds    3;
        snapTol         1e-12;
        clip            true;
        writeSurfCells  false;
        writeBoundedCells false;
        writeIsoFaces   false;

        nAlphaCorr      1;
        nAlphaSubCycles 1;
        cAlpha          1;
        nAlphaCorr      2;
        nAlphaSubCycles 1;
        cAlpha          1;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        DIC;
        cacheAgglomeration no;
        tolerance       1e-08;
        relTol          0.01;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
        tolerance       1e-9;
    }

    "pcorr.*"
    {
        $p_rghFinal;
        tolerance       1e-8;
    }

    "(U|k|epsilon).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-8;
        relTol          0;
    }

    "he.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0;
    }
    "concentration.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-5;
        relTol          0.01;
    }
}

PIMPLE
{
    momentumPredictor   no; //yes;
    nOuterCorrectors    1;
    nCorrectors         3;
    nNonOrthogonalCorrectors 2;
    correctPhi          yes;
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}


