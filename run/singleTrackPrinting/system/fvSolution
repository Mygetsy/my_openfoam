FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.metal.*"
    {
        isoFaceTol      1e-8;
        surfCellTol     1e-6;
        nAlphaBounds    3;
        snapTol         1e-12;
        clip            true;
        reconstructionScheme isoAlpha; // plicRDF

        writeSurfCells  false;
        writeBoundedCells false;
        writeIsoFaces   false;

        nAlphaCorr      1;
        nAlphaSubCycles 1;
        cAlpha          1;
        nAlphaCorr      2;
        nAlphaSubCycles 1;
        cAlpha          1;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        DIC;
        cacheAgglomeration no;
        tolerance       1e-8;
        relTol          0.01;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
        tolerance       1e-8;
    }

    "pcorr.*"
    {
        $p_rghFinal;
        tolerance       1e-5;
    }

    "(U|k|epsilon).*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-7;
        relTol          0;
    }

    "h.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.01;
    }

    hcorr
    {
        tolerance       1e-17;
    }
}

PIMPLE
{
    momentumPredictor   no;
    nOuterCorrectors    5; // for all variables
    nCorrectors         3; // for pressure
    nEnthalpyCorrectors 3;
    nNonOrthogonalCorrectors 0;
    correctPhi          yes;


    residualControl
    {
        "(h|p_rgh)"
        {
            tolerance   1e-5;
            relTol      0;
        }
    }
}

relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}


