FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     slmMeltPoolFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         2e-3;

deltaT          2e-5;

writeControl    adjustableRunTime;  // use timeStep for debug

writeInterval   4e-5;               // use 1 for debug

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.5;
maxAlphaCo      0.5;

maxDeltaT       1;

printProperties yes;

// ************************************************************************* //
