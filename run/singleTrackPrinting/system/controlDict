FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     slmMeltPoolFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         6e-4;

deltaT          1e-7;

writeControl    adjustableRunTime;  // use timeStep for debug

writeInterval   2.5e-6;               // use 1 for debug

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.5;
maxAlphaCo      0.25;
maxDeltaTemp    500;

maxDeltaT       1;

writeProperties yes;

// ************************************************************************* //
