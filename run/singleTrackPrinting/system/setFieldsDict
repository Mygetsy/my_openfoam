FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.metal 0
);

high 1e5;
low -1e5;
powderLayer 0;//4e-5;

regions
(
    boxToCell
    {
        box ($low $low $low) ($high $high 0);
        fieldValues
        (
            volScalarFieldValue alpha.metal 1
        );
    }
    boxToCell
    {
        box ($low $low 0) ($high $high $powderLayer);
        fieldValues
        (
            volScalarFieldValue alpha.metal 0.5
        );
    }
);


// ************************************************************************* //
