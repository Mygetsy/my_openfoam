FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     slmMeltPoolFoam;

startFrom       latestTime;

startTime       0.0;

stopAt          endTime;

endTime         5.0e-1;

deltaT          1.e-5;

writeControl    adjustableRunTime;  // use timeStep for debug

writeInterval   1.0e-3;               // use 1 for debug

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep  no;

maxCo           0.25;
maxAlphaCo      0.2;
maxDeltaTemp    1500;

maxDeltaT       1;

writeAllFields yes;

DebugSwitches
{
    isoAdvection 0;
    reconstructionSchemes 0;
    incompressibleGasMetalThermalProperties 0;
    rayTracing 0;
    rayTracingParticle 0;
    Fresnel 0;
    laserProperties 0;
}

