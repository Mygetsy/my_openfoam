// Sources:
// hirumalaisamy, Ramakrishnan & Bhalla, Amneet. (2023). A low Mach enthalpy method to model non-isothermal gas-liquid-solid flows with melting and solidification. 10.48550/arXiv.2301.06256. 
//
metal
{
    molWeight       26.98; 

    Tmelting        936.6; 
    Tboiling        5000; 
    Tcritical       4500; 

    Hfusion         383840; 
    Hvapour         0;

    rhoSolid        2700;
    rhoLiquid       2475;
    betaLiquid      0.35;

    solid
    {
        kappaCoeffs (211.0 0);
        CpCoeffs    (910.0 0);
    }

    liquid
    {
        kappaCoeffs (91 0 );
        CpCoeffs    (1042.4  0);
    }
}

gas
{
    molWeight       28.97; 
    rhoGas          0.4;
    kappaCoeffs     (6.1e-2  0);
    CpCoeffs        (1100.0 0); 
}

sigmoid         erf; // tanh or cut

solidificationFields
{
    enabled     no; // compute and write solidification(Gradient|Speed)
    alphaTol    0.5;
}

