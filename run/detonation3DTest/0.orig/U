FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    left
    {
        type            uniformFixedValue;
        value           $internalField;

        uniformValue
        {
            type scale;

            value constant (3.0151 0 0);

            scale
            {
                type        linearRamp;
                duration    8;
            }
        }
    }

    right
    {
        type            zeroGradient;
        value           $internalField;
    }

    topAndBottom
    {
        type            fixedValue;
        value           $internalField;
    }

    frontAndBack
    {
        type            fixedValue;
        value           $internalField;
    }
}


// ************************************************************************* //
